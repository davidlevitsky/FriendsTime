<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.friendstime.apps.calex.activities.CreateEventActivity"
    android:weightSum="1"
    >



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/rlCreateEventSearch"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inHonorOfString"
            android:id="@+id/tvInHonorOf"
            android:layout_below="@+id/tvEventName"
            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/svInHonorOf" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eventNameString"
            android:textAlignment="center"
            android:id="@+id/tvEventName"
            android:layout_toRightOf="@+id/ivEventLabel"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/ivEventLabel"
            android:layout_toLeftOf="@+id/tvStatus"
            android:layout_toStartOf="@+id/tvStatus" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivEventLabel"
            android:src="@drawable/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivEventStatus"
            android:src="@drawable/abc_btn_radio_material"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/statusStr"
            android:id="@+id/tvStatus"
            android:layout_below="@+id/ivEventStatus"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/tvEventName" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/svInHonorOf"
            android:spinnerMode="dropdown"
            android:layout_below="@+id/tvEventName"
            android:layout_toRightOf="@+id/tvInHonorOf"
            android:layout_toLeftOf="@+id/imageButton"
            android:layout_toStartOf="@+id/imageButton" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:layout_below="@+id/tvEventName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/badge"
            android:layout_alignBottom="@+id/svInHonorOf" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvOccasion"
            android:layout_below="@+id/tvInHonorOf"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/OccasionStr"
            android:layout_alignBottom="@+id/svOccasion" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/svOccasion"
            android:layout_toRightOf="@+id/tvOccasion"
            android:layout_below="@+id/svInHonorOf"
            android:spinnerMode="dropdown"
            android:layout_toLeftOf="@+id/btSurpriseMe"
            android:layout_toStartOf="@+id/btSurpriseMe" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/surpriseMeStr"
            android:id="@+id/btSurpriseMe"
            android:layout_below="@+id/svInHonorOf"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/svOccasion" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="367dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ShortEventDescrStr"
            android:id="@+id/tvEventDescription"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fromStr"
            android:id="@+id/tvFrom"
            android:layout_above="@+id/textView"
            android:layout_alignRight="@+id/tvTo"
            android:layout_alignEnd="@+id/tvTo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toStr"
            android:id="@+id/tvTo"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/tvFrom"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="43dp"
            android:layout_marginStart="43dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DateStr"
            android:id="@+id/tvDateFrom"
            android:layout_alignTop="@+id/tvTimeFrom"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DateStr"
            android:id="@+id/textView3"
            android:layout_alignTop="@+id/tvTo"
            android:layout_toRightOf="@+id/tvFrom"
            android:layout_toEndOf="@+id/tvFrom"
            android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timeStr"
            android:id="@+id/tvTimeFrom"
            android:layout_alignBottom="@+id/cbAllDay"
            android:layout_toLeftOf="@+id/cbAllDay"
            android:layout_toStartOf="@+id/cbAllDay"
            android:layout_marginRight="71dp"
            android:layout_marginEnd="71dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timeStr"
            android:id="@+id/tvTimeTo"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignLeft="@+id/tvTimeFrom"
            android:layout_alignStart="@+id/tvTimeFrom" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cbAllDay"
            android:checked="false"
            android:layout_marginRight="27dp"
            android:layout_marginEnd="27dp"
            android:layout_below="@+id/tvEventDescription"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="39dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/allDayStr"
            android:id="@+id/textView"
            android:layout_below="@+id/cbAllDay"
            android:layout_alignRight="@+id/cbAllDay"
            android:layout_alignEnd="@+id/cbAllDay"
            android:layout_marginTop="50dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/actionStr"
            android:id="@+id/btActions"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/tvTo"
            android:layout_alignLeft="@+id/tvTo"
            android:layout_alignStart="@+id/tvTo" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notesStr"
            android:id="@+id/btNotes"
            android:layout_alignBottom="@+id/btActions"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saveStr"
            android:id="@+id/btSave"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/tvFrom"
            android:layout_alignStart="@+id/tvFrom" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancelStr"
            android:id="@+id/btCancel"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clearStr"
            android:id="@+id/btClear"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/btNotes"
            android:layout_alignEnd="@+id/btNotes" />
    </RelativeLayout>

</LinearLayout>
